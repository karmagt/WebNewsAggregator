@model WebNewsAggregator.Entities.WebNewsSource
@{
    ViewData["Title"] = "Add source";
}

<div class="text-center">
    <h2 class="display-4">Add some sources</h2>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSource">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="row mt-3"></div>
            <div class="form-group">
                <label asp-for="ParsingRule" class="control-label"></label>
                <input asp-for="ParsingRule" class="form-control" />
                <span asp-validation-for="ParsingRule" class="text-danger"></span>
            </div>
            <div class="row mt-3"></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
